<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerlayout"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    tools:context=".ui.dashboad.MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <RelativeLayout
            android:id="@+id/ff_header"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:background="@color/colorPrimaryDark">
            <ImageView
                android:id="@+id/img_drawer_navigation"
                android:layout_width="@dimen/dimen_30"
                android:layout_height="@dimen/dimen_30"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_centerInParent="true"
                android:src="@drawable/menu_white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vendor App"
                android:fontFamily="@font/roboto_bold"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"/>
            <RelativeLayout
                android:id="@+id/rr_cart_item"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true">
                <ImageView
                    android:layout_width="@dimen/dimen_30"
                    android:layout_height="@dimen/dimen_30"
                    android:src="@drawable/cart"
                    android:layout_centerInParent="true"
                    />
                <TextView
                    android:id="@+id/text_count_cart_items"
                    android:layout_width="@dimen/dimen_20"
                    android:layout_height="@dimen/dimen_20"
                    android:text="0"
                    android:background="@drawable/circular"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginRight="@dimen/dimen_5"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_alignParentTop="true"
                    android:gravity="center"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>
        </RelativeLayout>

        <include layout="@layout/layout_dashboard"
            android:id="@+id/layout_dashbord_home_fragment"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_below="@+id/ff_header"
            android:layout_above="@+id/bottomNavigationView"/>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:menu="@menu/bottom_navigation_items"
            app:itemBackground="@color/colorPrimaryDark"
            android:layout_alignParentBottom="true"
            android:background="@color/colorPrimaryDark"
            app:itemIconTint="@color/bottom_nav_item_color"
            app:itemTextColor="@color/bottom_nav_item_color_text"
            app:itemActiveIndicatorStyle="@style/App.Custom.Indicator"
            />

    </RelativeLayout>


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/navigation_header"
        app:menu="@menu/navigation_menu"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Version 1.0"
            android:layout_gravity="bottom"
            android:layout_marginBottom="26dp"/>

    </com.google.android.material.navigation.NavigationView>


</androidx.drawerlayout.widget.DrawerLayout>