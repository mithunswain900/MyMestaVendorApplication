<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="@dimen/dimen_5"
    android:background="@drawable/bg_home_data_design">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/dimen_5"
                app:cardElevation="@dimen/dimen_5"
                android:layout_margin="4dp"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:id="@+id/img_card_items"
                    android:src="@drawable/pizza"
                    android:scaleType="fitXY"
                    />

            </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:weightSum="2">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/text_vendor_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vendor Name"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_gravity="center"
                    android:gravity="center|left"
                    android:textStyle="bold"
                    android:fontFamily="@font/roboto_bold"/>
                <TextView
                    android:id="@+id/text_vendor_vandorcatagories"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vendor Name"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:layout_gravity="center|left"
                    android:gravity="center|left"
                    android:textStyle="bold"
                    android:fontFamily="@font/roboto"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/text_vendor_rating"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:layout_gravity="center"
                        android:gravity="center|right"
                        android:textStyle="bold"
                        android:fontFamily="@font/roboto_bold"/>
                        <ImageView
                            android:layout_width="@dimen/dimen_20"
                            android:layout_height="@dimen/dimen_20"
                            android:layout_weight="1"
                            android:layout_gravity="right|center"
                            android:src="@drawable/ic_star"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/text_vendor_estimatetime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:layout_gravity="center|right"
                        android:gravity="center|right"
                        android:textStyle="bold"
                        android:fontFamily="@font/roboto_bold"/>
                        <ImageView
                            android:layout_width="@dimen/dimen_20"
                            android:layout_height="@dimen/dimen_20"
                            android:layout_weight="1"
                            android:layout_gravity="right|center"

                            android:src="@drawable/ic_watch"/>
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


        </LinearLayout>



